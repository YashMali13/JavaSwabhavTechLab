package com.aurionpro.text;
import java.util.*;

import com.aurionpro.model.TicketType;
public class TicketBookingSystem {

public static void main(String[] args) {
	System.out.println("==== TICKET BOOKING STSTEM ====");
	Scanner scanner = new Scanner (System.in);
	System.out.print("Enter Your name :");
	String name = scanner.nextLine().toUpperCase();
	scanner.nextLine();
	
	System.out.println("Choose Ticket Type : ");
	System.out.println("Regular (Rs500/-) ");
	System.out.println("VIP (Rs1000/-) ");
	System.out.println("Primium(Rs1500/-) ");
	String type= scanner.nextLine();
	
	TicketType ticketType =  TicketType.values(type);
	System.out.println("Ticket Type & Amount : "+ticketType.getTicketType());
	
	
	
	
	
	
	
	
	

	
}
}
